@import "../tpl/price-tpl/price-tpl.wxss";
@import "../tpl/dot-tpl/dot-tpl.wxss";
@import "../tpl/user-info-tpl/user-info-tpl.wxss";
@import "../tpl/description-tpl/description-tpl.wxss";
@import "../tpl/contact-tpl/contact-tpl.wxss";
@import "../tpl/operate-tpl/operate-tpl.wxss";
@import "../tpl/comment-tpl/comment-tpl.wxss";
@import "../tpl/modal-tpl/modal-tpl.wxss";

.swiper-imgs {
    width: 750rpx;
    height: 750rpx;
}

.item-img {
    width: 750rpx;
    height: 750rpx;
}

.operate-img-container {
    display: flex;
    flex-direction: row;
}

.white-btn {
    background: -webkit-gradient(linear, left top, left bottom, from(#fff), to(#fafafa));
    border: solid 1px #d2d2d2;
}

.button {
    display: inline-block;
    zoom: 1;
    vertical-align: baseline;
    margin-left: 32rpx;
    outline: none;
    cursor: pointer;
    text-align: center;
    text-decoration: none;
    padding: 20rpx 25rpx;
    border-radius: .5em;
}

.bottom-container {
    margin-top: 30rpx;
    margin-bottom: 110rpx;
    display: flex;
    flex-direction: column;
    
}

.comment-count-container {
    border-bottom: 1px solid #f2f2f2;
}

.font-size-15{
    font-size: 15px;
}

.comment-const {
    margin: 35rpx 0 33rpx 32rpx;
    font-size: 15px;
    color:#797979;
}

.comment-count {
    padding-left: 5rpx;
    padding-right: 5rpx;
}

.comments-container {
    display: flex;
    flex-direction: column;
    background-color: #f3f6f8;
}

.comment:last-child{
    margin-bottom: 30rpx;
}

.no-comments-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 300rpx;
    color: #5b5b5b;
    font-size: 28rpx;
    margin:105rpx 0 24rpx 223rpx; 
}

.no-comments-image {
    width: 214rpx;
    height: 157rpx;
}

.comment-form{
    width: 100%;
    height: 110rpx;
    position: fixed;
    border-top: 1rpx solid #f2f2f2;
    bottom: 0px;
}

.input-comment-container{
    display: flex;
    flex-direction: row;
    width:100%;
    height: 110rpx;
}

.input-comment-container button{
    background-color: #fff;
    width:110rpx;
    line-height: 110rpx;
    box-sizing: content-box;
    border-color: #fff;
}

.input-comment-container button::after{
    border-color: #fff;
}

.input-comment-container .input-button-hover{
    background-color: #f2f2f2;
}

.input-comment{
    height: 110rpx;
    width:534rpx;
    color:#2b2b2b;
    border-color: #fff;
    margin-left: 55rpx;
}

.decPriceContainer{
    position: fixed;
    border:1px solid red;
    top:50%;
    right: 50%;
    background-color: #fff;
    display: flex;
    flex-direction: column;
}

.price-input{
    border:1px solid #a2a2a2;
}

.button-container{
    display: flex;
    flex-direction: row;
}